FROM condaforge/mambaforge

SHELL ["/bin/bash", "-c"]
RUN mamba install boa conda-verify
RUN conda config --append channels bioconda
RUN conda config --append channels nodefaults
COPY .custom_channels /tmp/custom_channels
RUN readarray -t conda_channels < /tmp/custom_channels; \
    for channel in ${conda_channels[@]}; do \
        conda config --prepend channels ${channel}; \
    done 
