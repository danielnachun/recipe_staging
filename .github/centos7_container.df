FROM condaforge/linux-anvil-cos7-x86_64

SHELL ["/bin/bash", "-c"]
RUN yum install -y mesa-libGL
COPY .github/custom_channels /tmp/custom_channels
RUN source /opt/conda/etc/profile.d/conda.sh; \
    conda activate; \
    mamba install boa; \
    mamba clean -ay; \
    conda config --append channels bioconda; \
    conda config --append channels nodefaults; \
    xargs -I % conda config --prepend channels % < /tmp/custom_channels 
